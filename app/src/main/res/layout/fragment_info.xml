<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.InfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_10"
                    android:fontFamily="@font/anydore"
                    android:text="Enter your details"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/large_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="@dimen/size_15"
                    android:layout_marginBottom="@dimen/size_10"
                    android:background="@drawable/bg_light_grey_5"
                    android:elevation="3dp"
                    android:orientation="vertical"
                    android:padding="@dimen/size_20">

                    <ImageView
                        android:layout_width="@dimen/size_50"
                        android:layout_height="@dimen/size_50"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/info" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_20"
                        android:fontFamily="@font/rocko"
                        android:text="The information is required given below to complete your donation profile"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/smaller_text"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_20"
                        android:fontFamily="@font/rocko"
                        android:text="If you have never donated before, choose Never otherwise choose define last donation date"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/smaller_text"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_20"
                    android:fontFamily="@font/rocko"
                    android:text="Name"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_15"
                    android:background="@drawable/bg_light_grey_5"
                    android:fontFamily="@font/rocko"
                    android:hint="Enter your fullname"
                    android:inputType="text"
                    android:paddingStart="@dimen/size_15"
                    android:paddingEnd="@dimen/size_15"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_30"
                    android:fontFamily="@font/rocko"
                    android:text="Choose your gender"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey_5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_10">

                        <ImageView
                            android:id="@+id/ic_male"
                            android:layout_width="@dimen/size_20"
                            android:layout_height="@dimen/size_20"
                            android:src="@drawable/male" />

                        <TextView
                            android:id="@+id/txt_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_15"
                            android:fontFamily="@font/rocko"
                            android:text="Male"
                            android:textColor="@color/colorDarkGrey"
                            android:textSize="@dimen/small_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15"
                        android:background="@drawable/bg_light_grey_5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_10">

                        <ImageView
                            android:id="@+id/ic_female"
                            android:layout_width="@dimen/size_20"
                            android:layout_height="@dimen/size_20"
                            android:src="@drawable/female" />

                        <TextView
                            android:id="@+id/txt_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_15"
                            android:fontFamily="@font/rocko"
                            android:text="Female"
                            android:textColor="@color/colorDarkGrey"
                            android:textSize="@dimen/small_text" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_30"
                    android:fontFamily="@font/rocko"
                    android:text="Choose your blood group"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <include
                    android:id="@+id/blood_groups"
                    layout="@layout/layout_blood_groups" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_30"
                    android:fontFamily="@font/rocko"
                    android:text="Choose your date of birth"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/dob_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:background="@drawable/bg_light_grey_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_10">

                    <ImageView
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:src="@drawable/calendar" />

                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15"
                        android:fontFamily="@font/rocko"
                        android:text="Choose"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/small_text" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_30"
                    android:fontFamily="@font/rocko"
                    android:text="Choose your last donation date"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/never"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_light_grey_5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_10">

                        <ImageView
                            android:id="@+id/ic_never"
                            android:layout_width="@dimen/size_20"
                            android:layout_height="@dimen/size_20"
                            android:src="@drawable/never" />

                        <TextView
                            android:id="@+id/txt_never"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_15"
                            android:fontFamily="@font/rocko"
                            android:text="Never"
                            android:textColor="@color/colorDarkGrey"
                            android:textSize="@dimen/small_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ldd_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15"
                        android:background="@drawable/bg_light_grey_5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_10">

                        <ImageView
                            android:layout_width="@dimen/size_20"
                            android:layout_height="@dimen/size_20"
                            android:src="@drawable/calendar" />

                        <TextView
                            android:id="@+id/ldd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_15"
                            android:fontFamily="@font/rocko"
                            android:text="Choose"
                            android:textColor="@color/colorDarkGrey"
                            android:textSize="@dimen/small_text" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_30"
                    android:fontFamily="@font/rocko"
                    android:text="Define your present address"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_15"
                    android:layout_marginBottom="@dimen/size_80"
                    android:background="@drawable/bg_light_grey_5"
                    android:fontFamily="@font/rocko"
                    android:hint="Present address"
                    android:inputType="text"
                    android:paddingStart="@dimen/size_15"
                    android:paddingEnd="@dimen/size_15"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/update_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/size_15"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginEnd="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:background="@drawable/bg_light_red_5">

            <TextView
                android:id="@+id/btn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/rocko"
                android:text="Create Account"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normal_text"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/colorWhite"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>