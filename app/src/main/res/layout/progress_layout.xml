<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_15"
    android:paddingBottom="@dimen/size_15"
    android:paddingStart="@dimen/size_50"
    android:paddingEnd="@dimen/size_50"
    android:gravity="center"
    android:background="@drawable/bg_light_grey_5"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorDarkGrey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rocko"
        android:textSize="@dimen/small_text"
        android:layout_marginTop="@dimen/size_15"
        android:text="Please wait while the app is\nloading data"
        android:textAlignment="center"
        android:textColor="@color/colorDarkGrey"/>

</LinearLayout>