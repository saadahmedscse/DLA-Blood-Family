<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_10"
    android:layout_marginStart="@dimen/size_15"
    android:layout_marginEnd="@dimen/size_15"
    android:paddingTop="@dimen/size_10"
    android:paddingEnd="@dimen/size_15"
    android:paddingStart="@dimen/size_15"
    android:paddingBottom="@dimen/size_10"
    android:background="@drawable/bg_light_grey_5">

    <TextView
        android:id="@+id/bg"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:background="@drawable/bg_white_circle"
        android:fontFamily="@font/rocko"
        android:gravity="center"
        android:text="AB+"
        android:textColor="@color/colorLightRed"
        android:textSize="@dimen/smaller_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/bg"
        android:fontFamily="@font/rocko"
        android:text="Abu Syed Al Sakib"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/small_text"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="@dimen/size_25"
        android:layout_height="@dimen/size_25"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/delete"
        app:tint="@color/colorLightRed" />

</RelativeLayout>