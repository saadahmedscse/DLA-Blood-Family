<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.VerificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="36"
            android:elevation="3dp"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginStart="@dimen/size_15"
            android:layout_marginEnd="@dimen/size_15"
            android:layout_marginBottom="7dp"
            android:padding="@dimen/size_20"
            android:background="@drawable/bg_light_grey_5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:padding="@dimen/size_10"
                    android:background="@drawable/bg_white_circle"
                    android:src="@drawable/lock"
                    app:tint="@color/colorDarkGrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/normal_text"
                    android:textStyle="bold"
                    android:fontFamily="@font/rocko"
                    android:text="Enter Verification Code"
                    android:layout_marginStart="@dimen/size_15"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="We just sent you a temporary code to validate your mobile number, check your inbox"
                android:textAlignment="center"
                android:fontFamily="@font/rocko"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/small_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_alignParentBottom="true">

                <EditText
                    android:id="@+id/otp1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:fontFamily="@font/rocko"
                    android:layout_marginEnd="3dp"
                    android:inputType="number"
                    android:background="@drawable/bg_white_5"
                    android:textSize="@dimen/medium_text"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/otp2"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:fontFamily="@font/rocko"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:inputType="number"
                    android:background="@drawable/bg_white_5"
                    android:textSize="@dimen/medium_text"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/otp3"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:fontFamily="@font/rocko"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:inputType="number"
                    android:background="@drawable/bg_white_5"
                    android:textSize="@dimen/medium_text"
                    android:gravity="center"/>

                <View
                    android:layout_width="@dimen/size_10"
                    android:layout_height="2dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:background="@color/colorGrey"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/otp4"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:fontFamily="@font/rocko"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:inputType="number"
                    android:background="@drawable/bg_white_5"
                    android:textSize="@dimen/medium_text"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/otp5"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:fontFamily="@font/rocko"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:inputType="number"
                    android:background="@drawable/bg_white_5"
                    android:textSize="@dimen/medium_text"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/otp6"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:fontFamily="@font/rocko"
                    android:layout_marginStart="3dp"
                    android:inputType="number"
                    android:background="@drawable/bg_white_5"
                    android:textSize="@dimen/medium_text"
                    android:gravity="center"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/arrow_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="10">

            <ImageView
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_35"
                android:layout_centerInParent="true"
                android:rotation="90"
                android:src="@drawable/arrow" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/loading_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="22"
            android:layout_marginTop="7dp"
            android:layout_marginStart="@dimen/size_15"
            android:layout_marginEnd="@dimen/size_15"
            android:layout_marginBottom="7dp"
            android:background="@drawable/bg_light_grey_5"
            android:elevation="3dp"
            android:padding="@dimen/size_20"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_35"
                android:indeterminateTint="@color/colorDarkGrey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Validating your temporary code..."
                android:layout_marginTop="@dimen/size_15"
                android:textAlignment="center"
                android:fontFamily="@font/rocko"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/small_text" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/arrow_two"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="10">

            <ImageView
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_35"
                android:src="@drawable/arrow"
                android:layout_centerInParent="true"
                android:rotation="90"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/final_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="22"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_marginStart="@dimen/size_15"
            android:layout_marginEnd="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:background="@drawable/bg_light_grey_5"
            android:elevation="3dp"
            android:padding="@dimen/size_20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/confirmation_icon"
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_35"
                android:src="@drawable/checked"/>

            <TextView
                android:id="@+id/confirmation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rocko"
                android:text="Mobile Number Confirmed"
                android:layout_marginTop="@dimen/size_15"
                android:textAlignment="center"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/small_text" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="64">

            <TextView
                android:id="@+id/verify_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/size_15"
                android:layout_marginTop="@dimen/size_15"
                android:layout_marginEnd="@dimen/size_15"
                android:layout_marginBottom="@dimen/size_15"
                android:background="@drawable/bg_disabled_button"
                android:fontFamily="@font/rocko"
                android:gravity="center"
                android:text="Verify"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normal_text"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>