<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.PostFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_10"
                    android:fontFamily="@font/rocko"
                    android:text="Name"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_15"
                    android:background="@drawable/bg_light_grey_5"
                    android:fontFamily="@font/rocko"
                    android:hint="Enter patient name"
                    android:inputType="text"
                    android:paddingStart="@dimen/size_15"
                    android:paddingEnd="@dimen/size_15"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_30"
                    android:layout_marginBottom="@dimen/size_5"
                    android:fontFamily="@font/rocko"
                    android:text="Choose Blood Group"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <include
                    android:id="@+id/blood_groups"
                    layout="@layout/layout_blood_groups"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_30"
                    android:layout_marginBottom="@dimen/size_5"
                    android:fontFamily="@font/rocko"
                    android:text="Choose Quantity of Bag"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <include
                    android:id="@+id/blood_bags"
                    layout="@layout/layout_blood_bags"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_30"
                    android:layout_marginBottom="@dimen/size_5"
                    android:fontFamily="@font/rocko"
                    android:text="Choose Donation Time"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <include
                    android:id="@+id/donation_time"
                    layout="@layout/layout_donate_time"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_30"
                    android:fontFamily="@font/rocko"
                    android:text="Choose Donation Date"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:background="@drawable/bg_light_grey_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_10">

                    <ImageView
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:src="@drawable/calendar" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15"
                        android:fontFamily="@font/rocko"
                        android:text="Choose"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/small_text" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_30"
                    android:fontFamily="@font/rocko"
                    android:text="Hospital"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/hospital"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_15"
                    android:background="@drawable/bg_light_grey_5"
                    android:fontFamily="@font/rocko"
                    android:hint="Enter hospital name"
                    android:inputType="text"
                    android:paddingStart="@dimen/size_15"
                    android:paddingEnd="@dimen/size_15"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_30"
                    android:fontFamily="@font/rocko"
                    android:text="Location"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_15"
                    android:background="@drawable/bg_light_grey_5"
                    android:fontFamily="@font/rocko"
                    android:hint="Enter hospital location"
                    android:inputType="text"
                    android:paddingStart="@dimen/size_15"
                    android:paddingEnd="@dimen/size_15"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_30"
                    android:fontFamily="@font/rocko"
                    android:text="Write a short description"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/smaller_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_100"
                    android:layout_marginBottom="@dimen/size_80"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_15"
                    android:paddingTop="@dimen/size_10"
                    android:gravity="top"
                    android:background="@drawable/bg_light_grey_5"
                    android:fontFamily="@font/rocko"
                    android:hint="Write something about the patient"
                    android:paddingStart="@dimen/size_15"
                    android:paddingEnd="@dimen/size_15"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/post_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/size_15"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginEnd="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_15"
            android:background="@drawable/bg_light_red_5">

            <TextView
                android:id="@+id/btn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/rocko"
                android:text="Post Now"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normal_text"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/colorWhite"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>